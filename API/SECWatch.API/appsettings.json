{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database={db};User Id={user};Password={pass};TrustServerCertificate=True"
  },
  "Redis": {
    "ConnectionString": "{conn}"
  },
  "MongoDb": {
    "ConnectionString": "mongodb://{user}:{pass}@{host}:{port}",
    "DatabaseName": "{db}",
    "FinancialMetricsCollection": "financial_metrics"
  },
  "CorsOrigins": [
    "http://localhost:5173"
  ],
  "Jwt": {
    "Secret": "{secret}",
    "EmailVerificationTokenExpiryHours": 24,
    "PasswordResetTokenExpiryHours": 1,
    "UserTokenExpiryHours": 24,
    "Issuer": "{issuer}",
    "Audience": "{issuer}"
  },
  "Email": {
    "SmtpServer": "smtp.example.com",
    "Port": 587,
    "Username": "notifications@changeware.net",
    "Password": "your-smtp-password",
    "FromEmail": "notifications@changeware.net",
    "FromName": "{from}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Mailgun": {
    "Domain": "your-domain.com",
    "ApiKey": "your-api-key"
  }
}
