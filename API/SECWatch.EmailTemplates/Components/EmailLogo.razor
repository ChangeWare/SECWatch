@namespace SECWatch.EmailTemplates.Components

<table border="0" cellpadding="0" cellspacing="0" role="presentation">
    <tr>
        <td align="center">
            <img src="@LogoUrl" 
                 alt="SECWatch Logo" 
                 style="display: block; border: 0;"
            />
        </td>
    </tr>
</table>

@code {
    [Parameter]
    public string LogoUrl { get; set; } = "https://secwatch.changeware.net/images/email-logo.png";
}