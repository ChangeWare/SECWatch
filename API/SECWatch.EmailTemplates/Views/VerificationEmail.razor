<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <style>
        body {
            font-family: system-ui, -apple-system, sans-serif;
            background-color: #1a1f35;
            color: #f2f2f2;
            padding: 20px;
        }

        .card {
            background-color: #242b45;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .header {
            color: #4f46e5;
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 16px;
        }
        
    </style>
    <title>Daily New Filings Digest</title>
</head>
<body>
<div class="card">
    <div class="header">
        Welcome to SECWatch!
    </div>
    <p>
        Hi @FirstName, <br />
            
        Welcome to SECWatch! We are excited to have you on board. Please click the link below to verify your email address.
            
        <br />
        <a href="@VerificationLink">Verify Email</a>
    </p>
</div>
</body>
</html>

@code {
    [Parameter]
    public required string FirstName { get; set; }
    
    [Parameter]
    public required string VerificationLink { get; set; }
}