@inherits LayoutComponentBase
@using SECWatch.EmailTemplates.Components

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light dark" />
    <meta name="supported-color-schemes" content="light dark" />
    <title>SECWatch Email</title>
</head>
<body style="margin: 0; padding: 24px; background-color: #1A1F35; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial; color: #F2F2F2;">
<!-- Outer Container -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" role="presentation">
    <tr>
        <td align="center">
            <!-- Main Content Container -->
            <table border="0" cellpadding="0" cellspacing="0" width="600" style="max-width: 600px; background-color: #242B45; border-radius: 12px; border: 1px solid rgba(255, 255, 255, 0.1);" role="presentation">
                <!-- Logo Header -->
                <tr>
                    <td align="center" style="padding: 24px; border-bottom: 1px solid rgba(255, 255, 255, 0.1);">
                        <EmailLogo />
                    </td>
                </tr>

                <!-- Content Area -->
                <tr>
                    <td style="padding: 24px;">
                        @Body
                    </td>
                </tr>

                <!-- Footer -->
                <tr>
                    <td align="center" style="padding: 24px; border-top: 1px solid rgba(255, 255, 255, 0.1); font-size: 14px; color: rgba(242, 242, 242, 0.7);">
                        <p style="margin: 0 0 12px 0;">Â© @DateTime.Now.Year SECWatch. All rights reserved.</p>
                        <p style="margin: 0;">
                            <a href="@UnsubscribeUrl" style="color: rgba(242, 242, 242, 0.7); text-decoration: underline;">
                                Unsubscribe from these notifications
                            </a>
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
</body>
</html>

@code {

    [Parameter]
    public string UnsubscribeUrl { get; set; }
}